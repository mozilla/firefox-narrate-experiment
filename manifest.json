{
  "manifest_version": 2,
  "version": "0.3",
  "name": "Firefox Listen Study",
  "applications": {
    "gecko": {
      "id": "firefox-listen-study@shield.mozilla.org"
    }
  },
  "description": "Firefoxâ€™s Listen Study will measure interest in listening to web articles and evaluate the current Narrate user experience to understand the potential value to in promoting, improving, or expanding the feature.",
  "permissions": ["mozillaAddons", "storage"],
  "experiment_apis": {
    "narrate": {
      "schema": "./src/experiment/narrate.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["narrate"]],
        "script": "./src/experiment/narrate.js"
      }
    },
    "study": {
      "schema": "./src/privileged/study/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./src/privileged/study/api.js",
        "paths": [["study"]]
      }
    }
  },
  "icons": {
    "96": "listen-without-label.svg"
  },
  "background": {
    "scripts": ["./src/study-setup.js", "./src/main.js"]
  },
  "content_scripts": [
    {
      "matches": ["about:reader*"],
      "js": ["./src/content-script.js"]
    }
  ]
}
